<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" method="upgrade">
    <name>DIBS FlexWin</name>
    <creationDate>April 2013</creationDate>
    <author>DIBS A/S</author>
